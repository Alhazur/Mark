@model Companies

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Companies</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stores)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stores.Count)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit Company</a>
</div>
<br />
<div>
    @* måste sktiva namn som asp-route-companyId och sen id fr class i modelen på id från get create method  *@
    <a class="btn btn-success" asp-controller="Company" asp-action="CreateStore" asp-route-companyId="@Model.Id">Create Store</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Zip</th>
                <th scope="col">Country</th>
                <th scope="col">Longitude</th>
                <th scope="col">Latitude</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody id="AllStores">
            @if (Model.Stores.Count != 0 || Model.Stores != null)
            {
                @foreach (var item in Model.Stores)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Longitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Latitude)
                        </td>
                        <td>
                            <a asp-controller="Store" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" onclick="LinkUpdate('@Url.Action("Details", "Store", new {id = Model.Id })' , '@("person" + Model.Id)')">Details</a> |
                            <a asp-controller="Store" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index" asp-route-id="@Model.Id">Back to List</a>
</div>